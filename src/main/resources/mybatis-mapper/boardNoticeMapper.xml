<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.kro.namohagae.board.dao.BoardNoticeDao">

    <insert id="save">
        INSERT INTO BOARD_NOTICE
    values (BOARD_SEQ_BOARD_NO.nextval,#{boardNoticeWriter}, #{boardNoticeTitle},#{boardNoticeContent}, #{boardNoticeWriteDate}, 0)
    </insert>

    <select id="findAll" resultType="BoardNotice" >
        select *
        from BOARD_NOTICE
    </select>
    <select id="read" resultType="BoardNotice">
        select *
        from BOARD_NOTICE where BOARD_NOTICE_NO = #{boardNoticeNo}
    </select>
    <delete id="delete" parameterType="int">
        delete BOARD_NOTICE where BOARD_NOTICE_NO = #{boardNoticeNo}
    </delete>
    <update id="increaseReadCnt">
        update BOARD_NOTICE set BOARD_NOTICE_READ_COUNT=BOARD_NOTICE_READ_COUNT+1 where BOARD_NOTICE_NO = #{boardNoticeNo}
    </update>
    <update id="update">
        update BOARD_NOTICE set BOARD_NOTICE_TITLE = #{boardNoticeTitle} , BOARD_NOTICE_CONTENT = #{boardNoticeContent} where BOARD_NOTICE_NO = #{boardNoticeNo}
    </update>

</mapper>

